<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.c.cure.curecolor.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нужно расслабиться"
        android:id="@+id/bSleepPlus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/SleepPlus_clr3"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нужно взбодриться"
        android:id="@+id/bSleepMinus"
        android:layout_below="@+id/bSleepPlus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/SleepMinus_clr1"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пора есть"
        android:id="@+id/bAppetitePlus"
        android:layout_below="@+id/bSleepMinus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:background="@color/AppetitePlus_clr1"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Не пора есть"
        android:id="@+id/bAppetiteMinus"
        android:layout_below="@+id/bAppetitePlus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/AppetiteMinus_clr1"
        android:layout_margin="5dp" />

</RelativeLayout>
